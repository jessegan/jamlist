<!DOCTYPE html>
<html>
  <head>
    <title>Jamlist</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>


    <!-- Materializecss -->

    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>


    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar-fixed">
      <nav>
        <div class="nav-wrapper white">

          <%= link_to content_tag(:div, image_tag("jamlist_logo.png", size: "50"), class: "valign-wrapper", style: "height: 100%;"), root_path, class: "brand-logo center", style: "height: 100%;" %>

          <ul id="nav-mobile" class="right hide-on-med-and-down">
            <%= generate_nav_bar %>
          </ul>

        </div>
      </nav>
    </div>

    <!-- MAIN CONTENT -->
    <% if flash.alert || flash.notice %>
      <div style="position: fixed; z-index: 10; margin-left: 5px; margin-top: 5px; max-width: 15%;">

        <% if flash.alert %>
          <div class="card red lighten-5" style="padding: 10px;">
            <%= flash.alert %>
          </div>
        <% end %>

        <% if flash.notice %>
          <div class="card red lighten-5" style="padding: 10px;">
            <%= flash.notice %>
          </div>
        <% end %>

      </div>
    <% end %>
    

      <%= yield %>


  </body>
</html>
