<h1><%= current_playlist.name %></h1>

<h3>Tracks</h3>
<ul>
<% @tracks.each do |t| %>
    <li><%= t.name %></li>
<% end %>
</ul>

<%= button_to "Add Songs", tracks_group_playlist_path(current_group,current_playlist), method: :get %>

<% if admin_of(current_group) %>
    <%= button_to "Remove Songs", edit_tracks_group_playlist_path(current_group,current_playlist), method: :get %>
    <%= button_to "Edit", edit_group_playlist_path(current_group,current_playlist), method: :get %>
<% end %>