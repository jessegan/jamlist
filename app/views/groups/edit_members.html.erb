<h1>Edit Members</h1>

<%= form_with model: current_group, url: members_group_path(current_group), method: 'patch' do |f| %>

    <div>
        <%= f.collection_check_boxes :member_ids, current_group_members, :id, :user_name do |m| %>
            <%= m.label class: "check_box" do %>
                <%= m.object.user_name %>
                <% if m.object.user == current_user %>
                    (You)
                <% elsif m.object.user == current_group.owner %>
                    (Owner)
                <% else %>
                    <%= m.check_box class: "check_box" %>
                <% end %>
                <br>
            <% end %>
        <% end %>
    </div>

    <br>

    <div>
        <%= f.submit "Update Members" %>
    </div>

<% end %>