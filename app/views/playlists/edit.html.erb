<!-- Background image -->
<%= image_tag "background.png", style: "z-index: -1; position:fixed; opacity: 0.9; width: 100vw; height: 100vh;" %>

<!-- Main Content -->

<div class="container">

  <!-- Nav back link -->
  <div class="row">
    <div class="col s12">
      <%= link_to content_tag(:i, "arrow_left", class: "tiny material-icons")+ "Back to playlist", [current_group,current_playlist], class: "valign-wrapper" %>
    </div>
  </div>

    <div class="row">
        <div class="col s12">
            <h3>Edit Playlist</h3>
        </div>
    </div>

    <div class="row">
        <%= render partial: "form", locals: {playlist: current_playlist, btn_name: "Save"} %>
    </div>

    <% if admin_of(current_group) %>
        <div class="divider"></div> <br>

        <div class="row">
            <div class="col s12">
                <%= link_to "Delete Playlist", [current_group,current_playlist], method: :delete, class: "btn red", data: {confirm: "Are you sure you want to delete the playlist?"} %>
            </div>
        </div>
    <% end %>

</div>