<%= form_for @group do |f| %>
    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>

    <div>
        <%= f.label :description %>
        <br>
        <%= f.text_area :description, placeholder: "(optional)" %>
    </div>

    <div>
        <%= f.label :public %>
        <%= f.check_box :public %>
    </div>

    <div>
        <%= f.submit btn_name %>
    </div>

<% end %>