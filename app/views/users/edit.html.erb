<!-- Background image -->
<%= image_tag "background.png", style: "z-index: -1; position:fixed; opacity: 0.9; width: 100vw; height: 100vh;" %>

<!-- Main Content -->

<div class="container">

    <div class="row">
        <div class="col s12">
            <h3>Edit Profile</h3>
        </div>
    </div>

    <div class="row">
        <%= form_for @user_profile, class: "col s12" do |f| %>
            <div class="row">
                <div class="input-field col s12">
                    <%= f.label :display_name, "Change your display name" %>
                    <%= f.text_field :display_name, class: "validate", required: true %>
                </div>
            </div>

            <div class="row">
                <div class="col s12">
                    <%= f.submit "Save", class: "btn" %>
                </div>
            </div>
        <% end %>
    </div>

    <div class="divider"></div>
    <br>

    <div class="row">
        <div class="col s12">
            <%= link_to "Delete Your Account", @user_profile, method: :delete, class: "btn red", data: {confirm: "Are you sure you want to delete your account?"} %>
        </div>
    </div>

</div>