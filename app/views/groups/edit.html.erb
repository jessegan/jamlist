<!-- Background image -->
<%= image_tag "background.png", style: "z-index: -1; position:fixed; opacity: 0.9; width: 100vw; height: 100vh;" %>

<!-- Main Content -->

<div class="container">

  <!-- Nav back link -->
  <div class="row">
    <div class="col s12">
      <%= link_to content_tag(:i, "arrow_left", class: "tiny material-icons")+ "Back to group", current_group, class: "valign-wrapper" %>
    </div>
  </div>

    <div class="row">
        <h3 class="col s12">Edit Group</h3>
    </div>

    <div class="row">
        <%= render partial: 'form', locals: {btn_name: "Save"} %>
    </div>

    <% if owner_of(current_group) %>
        <div class="divider"></div>
        <br>
        <%= link_to "Delete Group", current_group, method: :delete, class: "btn red", data: {confirm: "Are you sure you want to delete #{current_group.name}?"} %>
    <% end %>

</div>