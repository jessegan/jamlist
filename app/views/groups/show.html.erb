<h1><%= current_group.name %></h1>

<% if !member_of(current_group) %>
    <%= button_to "Join Group", join_group_path(current_group), method: :post %>
<% end %>

<h2>Playlists</h2>
<ul>
<% current_group.playlists.each do |p| %>
  <li><%= p.name %></li>
<% end %>
</ul>

<h2>Members</h2>
<p>Insert list of members here</p>

<% if admin_of(current_group) %>
  <%= button_to "Edit", edit_group_path(current_group), method: :get %>
<% end %>
